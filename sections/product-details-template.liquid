            {% include 'include-contact-form', type: 'block' %}
          
          {% elsif block.type == "text_column" %}
          	
          
            {% if section.settings.title != blank %}
              <div class="sixteen columns">
                <h2 class="title center">{{ section.settings.title | escape }}</h2>
                <div class="feature_divider"></div>
              </div>
            {% endif %}

            
              {% if section.blocks.size == 3 %}
                {%- assign column_width = 'two-eighths offset-by-two columns medium-down--one-third column small--offset-by-one' -%}
