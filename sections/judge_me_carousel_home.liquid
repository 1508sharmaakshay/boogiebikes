<div style="margin:0 auto;max-width:{{section.settings.maxwidth}}px;">
  {% capture 'new_carousel' %}
	{% render 'judgeme_widgets', widget_type: 'judgeme_featured_carousel', concierge_install: false %}
	{% endcapture %}
	{{ new_carousel | replace: 'src=', 'loading="lazy" data-src=' | replace: 'srcset=','data-srcset=' | replace:"jdgm-carousel-item__product-image","lazyload jdgm-carousel-item__product-image"}}
</div>
{% schema %}
  {
    "name": "Judge.me Carousel",
    "settings": [
      {
        "type": "range",
        "id": "maxwidth",
        "min": 480,
        "max": 1920,
        "step": 40,
        "unit": "px",
        "label": "Maximum width",
        "default": 1080,
        "info": "For other settings please go to apps settings"
      }
    ],
    "presets": [
      {
        "name": "Judge.me Carousel",
        "category": "Judge.me Sections"
      }
    ]
  }
{% endschema %}