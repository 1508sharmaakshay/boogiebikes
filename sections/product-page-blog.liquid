{% comment %}
** Testimonial - homepage partial **
- Draggable section
- Uses blocks
{% endcomment %}

<style>
  
  #shopify-section-{{section.id}} .testimonial-block.gallery-cell.use-mobile-color {
  	background-color: transparent;
  }
  #shopify-section-{{section.id}} .headline, #testimonial-{{section.id}} .subtitle p {
  	color: initial;
    text-shadow: none;
  }
  #shopify-section-{{section.id}}  .flickity-page-dots {
  	bottom: 0em;
  }
  
  #shopify-section-{{section.id}} .flickity-page-dots .dot {
   width:10px;height:10px;margin:0 8px;background:#333;border-radius:50%;opacity:.25;
  }
   
  #shopify-section-{{section.id}} .flickity-page-dots .dot.is-selected{
    opacity:1
  }
  
  #shopify-section-{{section.id}} .gallery-cell {
  	background-color: initial;
  }
  #shopify-section-{{section.id}} .caption .title {
  	font-weight: 600;
  }
  
 #shopify-section-{{section.id}} .gallery-cell .image-element__wrap {
  	max-width: 250px;
  }
  
  #shopify-section-{{section.id}} .set-static .caption {
  	padding: 20px;
  }
  
  #shopify-section-{{section.id}} .caption-content {
  	max-width: 95%;
  }
  
      #shopify-section-{{section.id}} .whole.gallery-cell {
      	width: 100%;
      }
  
      #shopify-section-{{section.id}} .third.gallery-cell {
      	width: 30%;
      }

      #shopify-section-{{section.id}} .quarter.gallery-cell {
      	width: 23%;
      }
  
      #shopify-section-{{section.id}} .fifth.gallery-cell {
      	width: 18%;
      }
   
      #shopify-section-{{section.id}} .half.gallery-cell {
      	width: 48%;
      }
  
        
  
  #shopify-section-{{section.id}} {
  	
    background-color: {{ section.settings.background_color2 }};
  }
  
  @media screen and ( min-width: 1300px ) {
  
	
    #shopify-section-{{section.id}} .flickity-button{
      display: none;
    }
        #shopify-section-{{section.id}}  .flickity-page-dots {
    	display: none;
    }
    
  }

   @media screen and ( min-width: 481px ) {
	#shopify-section-{{section.id}} .caption-content.testimonial-text {
     width: 80%;
	}
   }
    
    @media screen and (max-width: 1299px) {
    	#testimonial-{{section.id}} .whole.gallery-cell, 
      #testimonial-{{section.id}} .half.gallery-cell, 
      #testimonial-{{section.id}} .third.gallery-cell, 
      #testimonial-{{section.id}} .quarter.gallery-cell, 
      #testimonial-{{section.id}} .fifth.gallery-cell {
          width: 45%;
    	}
      
      #testimonial-{{section.id}}  .flickity-page-dots {
    	display: block;
    }
    }
  @media screen and (max-width: 600px) {
  #testimonial-{{section.id}} .whole.gallery-cell, 
      #testimonial-{{section.id}} .half.gallery-cell, 
      #testimonial-{{section.id}} .third.gallery-cell, 
      #testimonial-{{section.id}} .quarter.gallery-cell, 
      #testimonial-{{section.id}} .fifth.gallery-cell {
          width: 100%;
    	}
    
    #shopify-section-{{section.id}} {
  		padding: 50px 0px 50px 0px;
  	}
    
  }

</style>



{% if section.settings.wide_display2 == false %}
<div class="container">
  <div class="fourteen columns offset-by-one ">
{% endif %}
    
 {% if section.settings.heading != blank %}
    <div class="sections-title center">{{ section.settings.heading2 }}</div>
    <div class="subtitle1">{{ section.settings.subtitle_2 }}</div>
   {% endif %}      
    

{% if section.blocks.size > 0 %}
    
  <div  id="testimonial-{{section.id}}"
      class="custom main-carousel
      full-width--{{ section.settings.wide_display2 }}"
       
        >
    {% for block in section.blocks %}
    
    
    
     {% if section.blocks.size == 1 %}
    
    {%- assign column_width = 'whole' -%}
   
    {% elsif section.blocks.size == 3 %}
      {%- assign column_width = 'third' -%}
   
    {% elsif section.blocks.size == 4 %}
      {%- assign column_width = 'quarter' -%}
      
    {% elsif section.blocks.size == 5 %}
      {%- assign column_width = 'fifth' -%}
        
    {% else %}
      {%- assign column_width = 'half' -%}
    
    {% endif %}
    
        <div class="testimonial-block column cell carousel-cell gallery-cell {{ column_width }} slide-{{ forloop.index }} {% if block.settings.image == nil %}set-static use-mobile-color{% endif %}" {{ block.shopify_attributes }} data-block-id="{{block.id}}">
            {% assign image2 = block.settings.image2 %}
            {% if image != nil %}
          		<style>
                   #testimonial-{{section.id}} .caption.position-center {
            margin: auto;
            position: relative;
            transform: initial;
            -webkit-transform: initial;
      }
          </style>
              {% render 'image-element',
                      image: image,
                      alt: image.alt,
                      stretch_width: true,
                      additional_classes: 'testimonial-image'
              %}
             
            {% endif %}
            <div class="caption position-{{block.settings.text_position2}} js-caption">
                <div class="caption-content testimonial-text {% if image2 != nil %}testimonial-text-mobile{% endif %} align-{{block.settings.text_align2}}">
                  
                  {% if block.settings.title2 != blank %}
                  <h3 class="title">
                      {{ block.settings.title2 }}
                    </h3>
                  {% endif %}
                  {% if block.settings.title3 != blank %}
                    <p class="headline">
                      {{ block.settings.title3 }}
                    </p>
                    
                  {% endif %}
                  <div class="subtitle">
                    {{ block.settings.testimonial2 }}

                  </div>
                </div>
              </div>

        </div>
    {% endfor %}
  </div>
{% endif %}

    
                      {% if section.settings.store_name != blank %}
                        {% if section.settings.link != blank %}<a class="action_button first_button highlight-true" href="{{ section.settings.link }}">{% endif %}
                          <strong>{{ section.settings.store_name }}</strong>
                        {% if section.settings.link != blank %}</a>{% endif %}
                      {% endif %}
   
{% if section.settings.wide_display2 == false %}
  </div>
</div>
{% endif %}

{% schema %}

{
  "name": "Columns slider w big imgs",
  "class": "custom-slider-section custom",
  "settings": [
    {
      "type": "checkbox",
      "id": "wide_display2",
      "label": "Wide display",
      "default": true
    },
    {
      "type": "range",
      "id": "testimonial_speed2",
      "label": "Change slides every",
      "min": 0,
      "max": 12,
      "step": 1,
      "default": 6,
      "unit": "sec"
    },
	{
          "type": "text",
          "id": "heading2",
          "label": "Heading",
          "default": "A Better Bike, Inside and Out"
        },
	{
          "type": "text",
          "id": "subtitle_2",
          "label": "Subtitle",
          "default": "(and foreign-shipped bikes)"
        },
  { "type": "color",
     "id": "background_color2",
      "label": "Section color",
      "default": "#ffffff"
  },
  {
          "type": "text",
          "id": "store_name2",
          "label": "Button name"
        },
        {
          "type": "url",
          "id": "link2",
          "label": "Link"
        }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Block",
      "settings": [
		{
          "type": "text",
          "id": "title2",
          "label": "Heading",
          "default": "Title"
        },
        {
          "type": "text",
          "id": "title3",
          "label": "Heading",
          "default": "Info"
        },
        {
          "type": "richtext",
          "id": "testimonial2",
          "label": "Content",
          "default": "<p>Include some features.</p>"
        },
        {
          "type": "select",
          "id": "text_position2",
          "label": "Text position",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        },
        {
          "type": "select",
          "id": "text_align2",
          "label": "Text alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        },
        {
          "type": "header",
          "content": "Image"
        },
        {
          "type": "image_picker",
          "id": "image2",
          "label": "Image",
          "info": "200 x 150px recommended"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text, pics slider",
      "category": "Text",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}

{% endschema %}
